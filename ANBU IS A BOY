#include<bits/stdc++.h>
using namespace std;
int main()
{ int t;
 cin>>t;
 while(t--)
 {
 int n,br1=0,br2=0;
 cin>>n;
 string str;
 cin>>str;
 for(int i=0;i<n;i++)
 {
 if(str[i]!=str[i+1]&&str[i]=='B')
 br1++;
 if(str[i]!=str[i+1]&&str[i]=='W')
 br2++;
 }
 if(br1>br2) cout<<br2<<endl;
 else cout<<br1<<endl;
 }
}
